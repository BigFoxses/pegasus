#!/bin/bash

# must be called from the top level

# check input arguments
if [ "$#" -ne 3 ]; then
    echo "Please specify pem-key location, cluster name, and technology!" && exit 1
fi

PEG_ROOT=$(dirname ${BASH_SOURCE})/..

source ${PEG_ROOT}/util.sh

# get input arguments [aws region, pem-key location]
PEMLOC=$1
CLUSTER_NAME=$2
TECHNOLOGY=$3

# check if pem-key location is valid
if [ ! -f $PEMLOC ]; then
    echo "pem-key does not exist!" && exit 1
fi

get_cluster_public_dns_arr ${CLUSTER_NAME}

script="${PEG_ROOT}/install/download_tech"
args="${TECHNOLOGY}"

for dns in "${PUBLIC_DNS_ARR[@]}"; do
  run_script_on_node ${PEMLOC} ${dns} ${script} ${args} &
done

wait

echo "${TECHNOLOGY} installed!"
